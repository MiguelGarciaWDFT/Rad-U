
<div class="">
  <div
    class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8"
  >
    <div class="md:flex md:items-center md:justify-center">
      <h2 class="text-2xl font-extrabold tracking-tight text-gray-900 text-center">GALERIAS DISPONIBLES</h2>
    </div>

    <div
      class="mt-6 grid grid-cols-2 gap-x-4 gap-y-10 sm:gap-x-6 md:grid-cols-4 md:gap-y-0 lg:gap-x-8"
    >
      {{#each data}}
        <div class="group relative w-800">
          <div
            class="w-full h-56 bg-gray-200 rounded-md overflow-hidden group-hover:opacity-75 lg:h-72 xl:h-80"
          >
            <img
              src="{{this.imageUrl}}"
              alt="rx.img"
              class="w-full h-full object-center"
            />
          </div>
          <h3 class="mt-4 text-sm text-gray-700">
            <a href="/galeria/{{this._id}}">
              <span class="absolute inset-0"></span>
              {{this.name}}
            </a>
          </h3>
        </div>

      {{/each}}
    </div>
  </div>
</div>